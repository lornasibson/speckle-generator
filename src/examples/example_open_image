from PIL import Image
import numpy as np
from specklegenerator.specklegenerator import Speckle, SpeckleData

ref_image = Image.open('/home/lorna/speckle_generator/images/regression_image_100.tiff')
ref_image_array = np.asarray(ref_image)
# for i in range(500):
#     for j in range(500):
#         print(ref_image_array[i][j])

seed = 8
speckler = Speckle(SpeckleData, seed)
image = speckler.make()
for i in range(100):
    for j in range(100):
        if ref_image_array[i][j] != image[i][j]:
            print(False)
            print('Saved image:', ref_image_array[i][j])
            print('Produced image:', image[i][j])
